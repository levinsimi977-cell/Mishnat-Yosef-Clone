<Window x:Class="MishnatYosef.GUI.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MishnatYosef.GUI" 
        xmlns:local1="clr-namespace:MishnatYosef.BLL"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.5*"/>

        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Picture/לוגו משנת יוסף לכל הפרימים.png" Margin="0,0,20,0" HorizontalAlignment="Right" Width="800"></Image>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="0" LastChildFill="False" >
                <Button x:Name="maneger" Content="מנהל" Margin="20,5,20,0" Background="#FF97E5F8" FontSize="30" VerticalAlignment="Bottom"   DockPanel.Dock="Right" Width="137" BorderBrush="Blue" Click="maneger_Click" ></Button>
                <Button x:Name="client" Content="לקוח" Margin="20,5,0,0" Background="#FF97E5F8" FontSize="30" VerticalAlignment="Bottom"  DockPanel.Dock="Right" Width="137" BorderBrush="Blue" Click="client_Click"></Button>
            </DockPanel>
            <StackPanel x:Name="stp"  Grid.Row="1" HorizontalAlignment="Right">
                <TextBlock Text="בכדי להכנס מלאו את פרטיכם " FontSize="16" FontWeight="Normal" HorizontalAlignment="Center" Foreground="#FF18171A"></TextBlock>
                <TextBlock  Margin="20,5,20,5" Text="הכנסת שם" Width="205" Height="35" Background="#FF97E5F8" FontSize="24" TextAlignment="Center" ></TextBlock>
                <TextBox x:Name="name" Margin="20,12,20,12" Width="205" Height="35" Background="#FF97E5F8" FontSize="24" TextAlignment="Center"  >
                    <Binding Path="FName">
                        <Binding.ValidationRules>
                            <local1:isHebrewRule2/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <TextBlock  Margin="20,5,20,5" Text="הכנסת תעודת זהות" Width="205" Height="35" Background="#FF97E5F8" FontSize="24" TextAlignment="Center"></TextBlock>
                <TextBox  x:Name="id" Width="205" Margin="20,12,20,12" Height="35"  Background="#FF97E5F8" FontSize="24" TextAlignment="Center" >
                    <Binding Path="ClientId">
                        <Binding.ValidationRules>
                            <local1:IsId></local1:IsId>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <TextBlock  Margin="20,5,20,5" Text="הכנסת טלפון" Width="205" Height="35" Background="#FF97E5F8" FontSize="24" TextAlignment="Center"></TextBlock>
                <TextBox  x:Name="phone" Margin="20,12,20,12" Width="205" Height="35" Background="#FF97E5F8" FontSize="24" TextAlignment="Center"  >
                    <Binding Path="Phone">
                        <Binding.ValidationRules>
                            <local1:IsCellPhone/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </StackPanel>
        </Grid>
        <TextBlock Grid.Row="2" Text="כל הזכויות שמורות למשנת יוסף נערך על ידי סימי לוין" Background="Black" Foreground="#FFE4F0F1" FontSize="18" RenderTransformOrigin="0.791,0.377" Height="33" VerticalAlignment="Bottom" TextAlignment="Center" />

    </Grid>
</Window>
