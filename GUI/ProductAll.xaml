<Page x:Class="MishnatYosef.GUI.ProductAll"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductAll">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="רשימת המוצרים" Style="{StaticResource txt2}" Width="200" Height="33" HorizontalAlignment="Center"></TextBlock>
        <ListView FlowDirection="RightToLeft" Style="{StaticResource lv1}" Width="293" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="auto" Header="שם מוצר" DisplayMemberBinding="{Binding NameProduct}"></GridViewColumn>
                    <GridViewColumn Width="auto"  Header="מותג" DisplayMemberBinding="{Binding CodeTrand}"></GridViewColumn>
                    <GridViewColumn Width="auto" Header="קטגוריה" DisplayMemberBinding="{Binding CodeCategory}"></GridViewColumn>
                    <GridViewColumn Width="auto" Header="מחיר" DisplayMemberBinding="{Binding Price}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="add" Content="להוספה לרשימה השבועית" Click="add_Click" Style="{StaticResource b3}" Width="217" Height="34"></Button>
    </StackPanel>
    </Grid>
</Page>
