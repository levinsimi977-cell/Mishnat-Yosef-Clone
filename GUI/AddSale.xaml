<Page x:Class="MishnatYosef.GUI.AddSale"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI" xmlns:local1="clr-namespace:MishnatYosef.BLL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSale">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.29*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="stp1" Grid.Column="1" >
            <TextBlock Text="הכנס שם מכירה" Style="{StaticResource txt3}" HorizontalAlignment="Center" ></TextBlock>
            <TextBox x:Name="nameSale" MaxLength="14"  Margin="0,0,12,12" HorizontalAlignment="Center">
                <Binding Path="NameSale">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2 />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <DatePicker  Width="96" x:Name="date1"  HorizontalAlignment="Center"  Margin="0,0,12,0"/>
            <TextBlock Text="הערה" Style="{StaticResource txt3}"  HorizontalAlignment="Center" ></TextBlock>
            <TextBox  x:Name="note"  Margin="0,0,12,12" HorizontalAlignment="Center">
                <Binding Path="Note">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2 />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Button x:Name="lett" Style="{StaticResource b4}" Content="לאישור הוספת המכירה" Click="lett_Click" Height="25" Width="205" HorizontalAlignment="Center"></Button>
            <TextBlock Text=":לחץ להוספה למכירה"  Margin="0,12,12,0" HorizontalAlignment="Center"></TextBlock>
            <WrapPanel HorizontalAlignment="Center">
                <Button x:Name="addProduct" Content="מוצר" Style="{StaticResource b4}" Height="28" Width="121" HorizontalAlignment="Right" Click="addProduct_Click"/>
                <Button x:Name="addlist" Content="רשימת מוצרים" Click="addlist_Click" Style="{StaticResource b4}" Height="28" Width="121" HorizontalAlignment="Left"/>
            </WrapPanel>
        </StackPanel>
        <Frame Grid.Column="0" x:Name="myFrame"></Frame>
    </Grid>
</Page>
