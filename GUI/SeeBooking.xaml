<Page x:Class="MishnatYosef.GUI.SeeBooking"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SeeBooking">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid>
        <StackPanel>
           <TextBlock Text="רשימת ההזמנות של השבוע הנוכחי"  Style="{StaticResource txt2}"></TextBlock>
            <ListView x:Name="lstv" Style="{StaticResource lv2}" Margin="12,6,12,6">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="שם מכירה" Width="auto" DisplayMemberBinding="{Binding Sale.NameSale}"/>
                        <GridViewColumn Header="שם לקוח" Width="auto"  DisplayMemberBinding="{Binding Client.LName}"/>
                        <GridViewColumn Header="מחיר סופי" Width="auto"  DisplayMemberBinding="{Binding FinalAmount}"/>
                        <GridViewColumn Header="מספר תשלומים" Width="auto"  DisplayMemberBinding="{Binding PaymentNumber}"/>

                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
