<Window x:Class="MishnatYosef.GUI.ManegerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MishnatYosef.GUI"
        mc:Ignorable="d"
        Title="ManegerPage" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Picture/לוגו משנת יוסף לכל הפרימים.png" Margin="0,0,20,0" HorizontalAlignment="Right" Width="800"></Image>

        <Grid Grid.Row="1">
           <Grid.ColumnDefinitions>
              <ColumnDefinition Width="3*"/>
              <ColumnDefinition Width="1.7*"/>
           </Grid.ColumnDefinitions>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" x:Name="Change" Width="275"  Content="מכירה חדשה" Click="Change_Click" Style="{StaticResource b2}" Height="40"  Margin="0,0,12,5"></Button>
                <Button Grid.Row="1" x:Name="more" Click="more_Click" Width="275" Content="הוספת מוצרים לרשימה השבועית"  Style="{StaticResource b2}" Height="40" Margin="0,0,12,5" Foreground="#FFFF7207" ></Button>
                <Button Grid.Row="2" x:Name="AP" Width="275"  Click="AP_Click"  Content="הוספת מוצרים"  Style="{StaticResource b2}" Height="40"  FontFamily="Sitka Small" Margin="0,0,12,5"></Button>
                <Button Grid.Row="3" x:Name="AT"  Width="275"  Click="AT_Click"  Content="הוספת מותג"  Style="{StaticResource b2}" Height="40" FontFamily="Sitka Small" Margin="0,0,12,5"></Button>
                <Button Grid.Row="4" x:Name="ACa" Width="275"  Click="ACa_Click"  Content="הוספת קטגוריה"  Style="{StaticResource b2}" Height="40" Margin="0,0,12,5" FontFamily="Sitka Small" ></Button>
                <Button Grid.Row="5" x:Name="ACi" Width="275"  Click="ACi_Click"  Content="הוספת עיר"  Style="{StaticResource b2}" Height="40" Margin="0,0,12,5" FontFamily="Sitka Small"></Button>
                <Button Grid.Row="6" x:Name="Ab" Width="275"  Click="Ab_Click"  Content="הוספת סניף"  Style="{StaticResource b2}" Height="40" Margin="0,0,12,5" FontFamily="Sitka Small"></Button>
                <Button Grid.Row="7" x:Name="see" Width="275" Click="see_Click"    Content="לצפיה בהזמנות"  Style="{StaticResource b2}" Height="40" Margin="0,0,12,5" FontFamily="Sitka Small"></Button>
            <Grid/>
          </Grid>
                <Frame Grid.Column="0"  x:Name="mFrame"></Frame>
        </Grid>
        <TextBlock Grid.Row="2" Text="כל הזכויות שמורות למשנת יוסף נערך על ידי סימי לוין" Background="Black" Foreground="#FFE4F0F1" FontSize="18" RenderTransformOrigin="0.791,0.377" Height="33" VerticalAlignment="Bottom" TextAlignment="Center" />
    </Grid>
</Window>
