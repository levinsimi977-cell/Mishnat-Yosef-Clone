<Page x:Class="MishnatYosef.GUI.LessProduct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LessProduct">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="מחיקת מוצר מהרשימה השבועית" Style="{StaticResource txt2}" HorizontalAlignment="Center"></TextBlock>
            <ListView x:Name="lstv" FlowDirection="RightToLeft" Style="{StaticResource lv2}" HorizontalAlignment="Center" >
                <ListView.View>
                    <GridView >
                        <GridViewColumn Header="שם מוצר" Width="auto" DisplayMemberBinding="{Binding Product.NameProduct}"></GridViewColumn>
                        <GridViewColumn Header="מותג" Width="auto" DisplayMemberBinding="{Binding Product.ProductTrand.Name}"></GridViewColumn>
                        <GridViewColumn Header="קטגורי" Width="auto" DisplayMemberBinding="{Binding Product.Category.Name}"></GridViewColumn>
                        <GridViewColumn Header="מחיר" Width="auto" DisplayMemberBinding="{Binding Product.Price}"></GridViewColumn>
                        <GridViewColumn Header="תמונה" Width="auto" DisplayMemberBinding="{Binding Product.Picture}"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="delete" Content="להסרה" Click="delete_Click" Style="{StaticResource b3}" Height="37" Width="100"></Button>
        </StackPanel>

    </Grid>
</Page>
