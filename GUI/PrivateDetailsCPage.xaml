<Page x:Class="MishnatYosef.GUI.PrivateDetailsCPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI" xmlns:local1="clr-namespace:MishnatYosef.BLL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PrivateDetailsCPage">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White" x:Name="g1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="tb" Visibility="Hidden" Background="AliceBlue"></Button>
        <StackPanel Grid.Column="1" x:Name="stp1">
            <TextBlock   Text="פרטים אישיים" Style="{StaticResource txt2}" FontSize="24"  Margin="12,12,12,6"></TextBlock>
            <TextBlock Text="שם פרטי" Style="{StaticResource txt3}" Margin="12,6,12,6"></TextBlock>
            <TextBox x:Name="fname" MaxLength="14" Margin="12,6,12,6">
                <Binding Path="FName">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="שם משפחה" Style="{StaticResource txt3}"  Margin="12,6,12,6"></TextBlock>
            <TextBox x:Name="lname" MaxLength="14"  Margin="12,6,12,6" >
                <Binding Path="LName">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="ת.ז" Style="{StaticResource txt3}"  Margin="12,6,12,6"></TextBlock>
            <TextBox x:Name="id"   Margin="12,6,12,6">
                <Binding Path="ClientId">
                    <Binding.ValidationRules>
                        <local1:IsId/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="כתובת מגורים" Style="{StaticResource txt2}" FontSize="24"  Margin="12,6,12,6"></TextBlock>
            <TextBlock Text="כתובת" Style="{StaticResource txt3}"  Margin="12,6,12,6"></TextBlock>
            <TextBox  x:Name="addres" MaxLength="14"  Margin="12,6,12,6" >
                <Binding Path="Address">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock  Text="מספר בית"  Style="{StaticResource txt3}"  Margin="12,6,12,6"></TextBlock>
            <TextBox x:Name="numhouse" MaxLength="4" Margin="12,6,12,6">
                <Binding Path="NumHouse">
                    <Binding.ValidationRules>
                        <local1:IsNumber/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
        </StackPanel>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="7.5*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0"  x:Name="stp2">

                <TextBlock Text="עיר" Style="{StaticResource txt3}"  Margin="12,12,12,6"></TextBlock>
                <ComboBox x:Name="cmbC"  Margin="12,6,12,6"  Width="112" DisplayMemberPath="Name" SelectedItem="{Binding City}" HorizontalAlignment="Right" SelectionChanged="cmbC_SelectionChanged"/>
                <WrapPanel FlowDirection="RightToLeft">
                    <TextBlock Text="עירך:" Style="{StaticResource txt2}" FontSize="20"></TextBlock>
                    <TextBlock x:Name="ca" Style="{StaticResource txt2}" FontSize="20"></TextBlock>           

                </WrapPanel>
                <TextBlock Text="טלפונים"  Margin="12,6,12,6" Style="{StaticResource txt2}"></TextBlock>
                <TextBlock Text="טלפון"  Margin="12,6,12,6" Style="{StaticResource txt3}"></TextBlock>
                <TextBox  x:Name="phone"   Margin="12,6,12,6">
                    <Binding Path="Phone">
                        <Binding.ValidationRules>
                            <local1:IsCellPhone/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
                <TextBlock Text="סניף" Style="{StaticResource txt2}"  Margin="12,6,12,6"></TextBlock>
                <TextBlock Text="בחר סניף" Style="{StaticResource txt3}"  Margin="12,6,12,6"></TextBlock>
                <ListView x:Name="lstv" Style="{StaticResource lv2}">
                    <ListView.View >
                        <GridView>
                            <GridViewColumn Header="עיר" Width="auto" DisplayMemberBinding="{Binding City1.Name}"/>
                            <GridViewColumn Header="כתובת" Width="auto"  DisplayMemberBinding="{Binding Address}"/>
                            <GridViewColumn Header="מס בית" Width="auto"  DisplayMemberBinding="{Binding NumHouse}"/>

                        </GridView>
                    </ListView.View>
                </ListView>
                <WrapPanel FlowDirection="RightToLeft">
                    <TextBlock Text="סניפך:" Style="{StaticResource txt2}" FontSize="20"></TextBlock>
                <TextBlock x:Name="ba" Style="{StaticResource txt2}" FontSize="20"></TextBlock>

                </WrapPanel>
                  </StackPanel>

               <Button Grid.Row="1" x:Name="upDate" Content="לעדכון הפרטים" Style="{StaticResource b3}" Margin="0,0,0,5" Click="upDate_Click" ></Button>
         
        </Grid>
    </Grid>
</Page>
