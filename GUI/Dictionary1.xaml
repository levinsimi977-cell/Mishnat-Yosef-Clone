<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="Button" x:Key="b1">
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="Height" Value="50"></Setter>
    </Style>
    <Style TargetType="Button" x:Key="b2">
        <Setter Property="Width" Value="240"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="Height" Value="60"></Setter>
        <Setter Property="Foreground" Value="#FFFF7207"></Setter>
        <Setter Property="FontSize" Value="18"></Setter>
    </Style>
    <Style TargetType="ListView" x:Key="lv1">
        <Setter Property="Width" Value="100"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#FFFF7207"/>
        <Setter Property="Height" Value="60"></Setter>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
    </Style>
    <Style TargetType="Button" x:Key="b3">
        <Setter Property="Width" Value="170"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="Height" Value="47"></Setter>
        <Setter Property="Background" Value="#FF7EEB77"></Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="BorderBrush" Value="#FF22F633"></Setter>

    </Style>
    <Style TargetType="Button" x:Key="b4">
        <Setter Property="Width" Value="170"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="Height" Value="47"></Setter>
        <Setter Property="Background" Value="#FFFF7207"></Setter>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="18"></Setter>
        <Setter Property="BorderBrush" Value="OrangeRed"></Setter>

    </Style>
    <Style TargetType="TextBlock" x:Key="txt1">
        <Setter Property="Width" Value="410"></Setter>
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="Height" Value="33"></Setter>
        <Setter Property="Background" Value="#FF7EEB77"></Setter>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="22"></Setter>
        <Setter Property="FontFamily" Value="Engravers MT"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="txt2">
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="Foreground" Value="#FFFB7E43" />
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="FontSize" Value="26"></Setter>
    </Style>
    <Style TargetType="TextBlock" x:Key="txt3">
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>
        <Setter Property="Foreground" Value="#FFFF7207"/>

    </Style>
    <Style TargetType="ListView" x:Key="lv2">
        <Setter Property="Width" Value="auto"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#FFFF7207"/>
        <Setter Property="Margin" Value="12"></Setter>
        <Setter Property="HorizontalAlignment" Value="Right"></Setter>
        <Setter Property="FlowDirection" Value="RightToLeft"></Setter>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Width" Value="105"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Margin" Value="12"/>

    </Style>
    <Style TargetType="TextBox" x:Key="error">
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="ToolTip" Value="{Binding RelativeSource={x:Static RelativeSource.Self},Path=(Validation.Errors)[0].ErrorContent}"></Setter>
                <Setter Property="BorderBrush" Value="Red"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>