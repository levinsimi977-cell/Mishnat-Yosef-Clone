<Page x:Class="MishnatYosef.GUI.AdvertaismentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdvertaismentPage">

    <Grid Background="White">
        <StackPanel>//האם המנהל יכול לשלוט בעמודים מסוימים
            <Button x:Name="enter" Content="לכניסה"></Button>
            <TextBlock x:Name="title" Text="יותר זול,יותר קרוב,יותר משתלם" HorizontalAlignment="Center" FontSize="36" Foreground="#FFF66609" FontWeight="Bold" FontFamily="Yu Gothic Medium"></TextBlock>
            <WrapPanel HorizontalAlignment="Center">
                <StackPanel Margin="50,100,10,0" HorizontalAlignment="Center" Background="WhiteSmoke">
                    <Image Source="/Picture/תמונה לתחנות.png" Margin="5" Width="33" Height="34"/>
                    <TextBlock x:Name="station"  Text="11" FontSize="48" HorizontalAlignment="Center" />
                    <TextBlock Text="תחנות" FontSize="18" Foreground="#FFF66609" HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Margin="50,100,10,0" HorizontalAlignment="Center" Background="WhiteSmoke">
                    <Image Source="/Picture/תמונה למוצרים.png" Width="45" Margin="5"/>
                    <TextBlock x:Name="product" Text="100" FontSize="48" HorizontalAlignment="Center" ></TextBlock>
                    <TextBlock Text="מוצרים" FontSize="18" Foreground="#FFF66609" HorizontalAlignment="Center"></TextBlock>
                </StackPanel>
                <StackPanel Margin="50,100,50,0" HorizontalAlignment="Center" Background="WhiteSmoke">
                    <Image Source="/Picture/תמונה ללקוחות.png" Width="42" Margin="5" Height="34"/>
                    <TextBlock x:Name="clients" Text="300" FontSize="48" HorizontalAlignment="Center" ></TextBlock>
                    <TextBlock Text="לקוחות" FontSize="18" Foreground="#FFF66609" HorizontalAlignment="Center"></TextBlock>
                </StackPanel>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
