<UserControl x:Class="MishnatYosef.GUI.USProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MishnatYosef.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="White">
        <StackPanel FlowDirection="RightToLeft" x:Name="wrp1" Margin="12">
            <WrapPanel>
              <TextBlock Text="{Binding NameProduct}" Style="{StaticResource txt2}" FontSize="16" FontWeight="Normal" Margin="2,2,2,2"></TextBlock>
                <Image x:Name="img1" Width="50" Height="50" Margin="2,2,2,2"></Image>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="קטגוריה:" Style="{StaticResource txt2}" FontSize="16" FontWeight="Normal" Margin="2,2,2,2" ></TextBlock>
                <TextBlock Text="{Binding Category.Name}" Style="{StaticResource txt2}" FontSize="16" FontWeight="Normal" Margin="2,2,2,2"></TextBlock>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="מותג:" Style="{StaticResource txt2}" FontSize="16" FontWeight="Normal" Margin="2,2,2,2"></TextBlock>
                <TextBlock Text="{Binding ProductTrand.Name}" Style="{StaticResource txt2}" FontSize="16" FontWeight="Normal" Margin="2,2,2,2"></TextBlock>
            </WrapPanel>
            <WrapPanel>
                <Button x:Name="Plus" Content="+" Click="Plus_Click"  Width="25" Height="25" Margin="2,2,2,2"></Button>
                <TextBlock  Text="1" x:Name="txtA"  Style="{StaticResource txt2}" FontSize="16" FontWeight="Normal" Margin="2,2,2,2"></TextBlock>
            <Button x:Name="Minus" Content="-" Click="Minus_Click" Margin="5" Width="25" Height="25"></Button>
           </WrapPanel>
            <Button x:Name="Ok" Content="הוסף לסל" Width="92" Height="25" Click="Ok_Click" Style="{StaticResource b2}" HorizontalAlignment="Left" Margin="2,2,2,2"></Button>
        </StackPanel>
    </Grid>
</UserControl>
