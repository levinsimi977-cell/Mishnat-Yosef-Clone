<Page x:Class="MishnatYosef.GUI.AddBranch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI" xmlns:local1="clr-namespace:MishnatYosef.BLL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddBranch">

    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="stp" Grid.Column="1">
            <TextBlock Text="כתובת" Style="{StaticResource txt3}"></TextBlock>
            <TextBox x:Name="adress" MaxLength="14"  Margin="12,0,12,0" >
                <Binding Path="Address">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="מספר בית" Style="{StaticResource txt3}"></TextBlock>
            <TextBox x:Name="nhouse" MaxLength="4"  Margin="12,0,12,0">
                <Binding Path="NumHouse">
                    <Binding.ValidationRules>
                        <local1:IsNumber/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="עיר" Style="{StaticResource txt3}"></TextBlock>
            <ComboBox x:Name="cmbC" Margin="12,0,12,0" Width="112" DisplayMemberPath="Name" SelectedItem="{Binding City}"  HorizontalAlignment="Right"/>
            <TextBlock Text="משעה" Style="{StaticResource txt3}"></TextBlock>
            <TextBox x:Name="from" MaxLength="2"  Margin="12,0,12,0">
                <Binding Path="FromHour">
                    <Binding.ValidationRules>
                        <local1:IsNumber/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="עד שעה" Style="{StaticResource txt3}"></TextBlock>
            <TextBox x:Name="still" MaxLength="2" Margin="12,0,12,0" >
                <Binding Path="StillHour">
                    <Binding.ValidationRules>
                        <local1:IsNumber/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <TextBlock Text="מספר טלפון של אחראי תחנה" Style="{StaticResource txt3}"></TextBlock>
            <TextBox x:Name="mphone"  Margin="12,0,12,0">
                <Binding Path="ManegerPhone">
                    <Binding.ValidationRules>
                        <local1:IsCellPhone/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Button x:Name="lett" Content="לאישור" Click="lett_Click" Style="{StaticResource b3}" Height="43" Width="98"></Button>
        </StackPanel>
        <ListView x:Name="lstv" Width="auto" Height="auto" FlowDirection="RightToLeft" Style="{StaticResource lv2}" HorizontalAlignment="Center" Margin="0,12,0,12" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="עיר" DisplayMemberBinding="{Binding City1.Name}"></GridViewColumn>
                    <GridViewColumn Header="רחוב" DisplayMemberBinding="{Binding Address}"></GridViewColumn>
                    <GridViewColumn Header="מס' בית" DisplayMemberBinding="{Binding NumHouse}"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
