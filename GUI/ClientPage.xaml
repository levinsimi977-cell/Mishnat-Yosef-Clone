<Window x:Class="MishnatYosef.GUI.ClientPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MishnatYosef.GUI"
        mc:Ignorable="d"
        Title="ClientPage" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"/>
    </Window.Resources>
  
        <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="/Picture/לוגו משנת יוסף לכל הפרימים.png" Margin="0,0,20,0" HorizontalAlignment="Right" Width="800"></Image>

        <Image Source="/Picture/תמונת ירקות.png"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"></Image>
        <DockPanel Grid.Row="1">
            <Button x:Name="enter" Content="כניסה" Click="enter_Click"  Style="{StaticResource b4}" Margin="20,2,0,2"></Button>
            <TextBlock Text="לקוח חדש" x:Name="title" TextAlignment="Right" FontSize="36" FontFamily="Showcard Gothic" FontWeight="Bold" Foreground="#FFFB7E43" VerticalAlignment="Center"></TextBlock>
        </DockPanel>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4.5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1" >
                <Button x:Name="privateDetails" Style="{StaticResource b2}" Width="130"  Margin="0,5,12,5" Content="פרטים אישיים" Click="privateDetails_Click"></Button>
                <Button x:Name="CreditCard" Style="{StaticResource b2}" Width="130" Margin="0,5,12,5" Content="כרטיס אשראי" Click="CreditCard_Click"></Button>
                <Button x:Name="Booking" Style="{StaticResource b2}" Width="130"  Margin="0,5,12,5" Content="הזמנות" Click="Booking_Click"></Button>
                <Button x:Name="Acquittal" Style="{StaticResource b2}" Width="130" Margin="0,5,12,5" Content="זיכויים" Click="Acquittal_Click"></Button>
            </StackPanel>
            <StackPanel Grid.Column="0">
                <TextBlock Text="סכום זיכוים" Visibility="Hidden" x:Name="Acquittal1" Style="{StaticResource txt3}"></TextBlock>
                <Frame x:Name="cFrame" Grid.Column="0"></Frame>
            </StackPanel>
        </Grid>
        <!--אם הלקוח לא קיים הוא ירשום כאן לשמירה-->
        <TextBlock Grid.Row="6" Text="כל הזכויות שמורות למשנת יוסף נערך על ידי סימי לוין" Background="Black" Foreground="#FFE4F0F1" FontSize="18" RenderTransformOrigin="0.791,0.377" Height="33" VerticalAlignment="Bottom" TextAlignment="Center" />

    </Grid>
</Window>
