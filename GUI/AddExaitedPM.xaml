<Page x:Class="MishnatYosef.GUI.AddExaitedPM"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI" xmlns:local1="clr-namespace:MishnatYosef.BLL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddExaitedPM">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,40,0,52" x:Name="exaited" Text="הוספת מוצר לרשימת המוצרים השבועית" Style="{StaticResource txt2}" Width="482" Height="Auto" Grid.RowSpan="2" HorizontalAlignment="Center"></TextBlock>

        <StackPanel x:Name="stpExait" Grid.Row="2">
            <ListView x:Name="lstvP" FlowDirection="RightToLeft"  Style="{StaticResource lv2}" d:ItemsSource="{d:SampleData ItemCount=5}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="שם מוצר" DisplayMemberBinding="{Binding NameProduct}"></GridViewColumn>
                        <GridViewColumn Header="קטגוריה" DisplayMemberBinding="{Binding Category.Name}"></GridViewColumn>
                        <GridViewColumn Header="מותג" DisplayMemberBinding="{Binding ProductTrand.Name}"></GridViewColumn>
                        <GridViewColumn Header="מחיר" DisplayMemberBinding="{Binding Price}"></GridViewColumn>

                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock  Text="בחר כמות במלאי" Style="{StaticResource txt3}" ></TextBlock>
            <TextBox x:Name="a1" MaxLength="3">
                <Binding Path="AmountInStoke">
                    <Binding.ValidationRules>
                        <local1:IsNumber/><!--לא מתיחס לבדיקת תקינות-->
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
           
            <Button Name="lett" Content="לאישור" Style="{StaticResource b4}" Click="lett_Click"></Button>
        </StackPanel>

    </Grid>
</Page>
