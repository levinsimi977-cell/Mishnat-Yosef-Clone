<Page x:Class="MishnatYosef.GUI.AddCategory"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MishnatYosef.GUI" xmlns:local1="clr-namespace:MishnatYosef.BLL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCategory">
    <Page.Resources>
        <ResourceDictionary Source="Dictionary1.xaml"></ResourceDictionary>
    </Page.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <TextBlock Text="הכנס שם קטגוריה" Style="{StaticResource txt3}" ></TextBlock>
            <TextBox x:Name="name" MaxLength="14">
                <Binding Path="Name">
                    <Binding.ValidationRules>
                        <local1:isHebrewRule2/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox>
            <Button x:Name="lett" Content="לאישור" Click="lett_Click" Style="{StaticResource b3}" Height="32" Width="76"></Button>

        </StackPanel>
        <ListView x:Name="lstv" Width="auto" Height="auto" FlowDirection="RightToLeft" Style="{StaticResource lv2}" d:ItemsSource="{d:SampleData ItemCount=5}" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="שם קטגוריה" DisplayMemberBinding="{Binding Name}"></GridViewColumn>
  
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
